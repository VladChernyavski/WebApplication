@model WebAppChernyavskiy.Models.Collections.Item

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование айтейма</h1>

<h4>Введите новые данные</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Date" class="form-control" type="hidden" value="@DateTime.Now.AddHours(3).ToString("dd:MM:yyyy HH:mm")" />
            </div>
            <div class="form-group">
                <input asp-for="CollectionId" class="form-control" type="hidden" value="@Model.CollectionId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Применить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
